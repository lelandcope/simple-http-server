## LogFile
fs      = require 'fs'
url		= require 'url'
colors  = require 'colors'

logfile = {
	check: (req, res, next)->
		try
			pathname = decodeURI url.parse(req.url).pathname
		catch error
			console.log error

		fs.stat process.cwd()+pathname, (err, stat)->
			if err
				console.log 'Error serving %s - File Not Found'.red, pathname
			else
				console.log '%s', pathname

		next()
}

exports.check = logfile.check